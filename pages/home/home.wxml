<!--pages/home/home.wxml-->
<!-- 此处引用模板 -->
<import src="../templates/home_item_template.wxml" />
<view>
  <swiper 
    indicator-dots=true
    autoplay=true 
    interval="2000"
    circular=true 
    duration="1000"
    style="height:600rpx;"
    indicator-color="#fff"
    indicator-active-color="#03ccdd"
  >
    <block wx:for="{{imgUrls}}" wx:key="i">
      <swiper-item>
        <image src="{{item}}" class="slide-image swiper_img"/>
      </swiper-item>
    </block>
  </swiper>

  <block wx:for="{{list}}" wx:for-item="item" wx:key="index">
    <template is="homeListItem" data="{{item}}"/>
  </block>
</view>
