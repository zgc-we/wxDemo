<!--pages/home/home.wxml-->
<view>
  <swiper 
    indicator-dots=true
    autoplay=true 
    interval="2000"
    circular=true 
    duration="1000"
    style="height:600rpx;"
    indicator-color="#fff"
    indicator-active-color="#03ccdd"
  >
    <block wx:for="{{imgUrls}}" wx:key="i">
      <swiper-item>
        <image src="{{item}}" class="slide-image swiper_img"/>
      </swiper-item>
    </block>
  </swiper>

  <block>
    <view class="postConter">
      <view class="post_author_name">
        <image src="{{list[0]['titleImg']}}" class="post_author_img"></image>
        <text style="line-height: 100rpx;">{{list[0]['titleTime']}}</text>
      </view>
      <text class="cart_title">{{list[0]['header']}}</text>
      <image class="cart_img" src="{{list[0]['contentImg']}}"></image> 
      <text class="cart_con">{{list[0]['content']}}</text>
      <view class="cart_footer">
        <image class="footer_img" src="/images/icon/chat.png"></image>
        <text style="margin-right: 20rpx;">{{list[0]['star']}}</text>
        <image class="footer_img" src="/images/icon/view.png"></image>
        <text>{{list[0]['seePeople']}}</text>
      </view>
    </view>
  </block>


</view>
