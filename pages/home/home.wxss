.swiper_img{
  width: 100%;
  height: 600rpx;
}
.postConter{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 5rpx;
}
.post_author_name{
  margin: 10rpx 0 10rpx 10rpx;
  display: flex;
  line-height: 100rpx;
}
.post_author_img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.cart_title{
  font-size: 16px;
  font-weight: bold;
  text-indent: 2rem;
  margin-bottom: 10rpx;
}
.cart_img{
  width: 100%;
  height: 350rpx;
}
.cart_con{
  text-indent: 2rem;
  padding: 0 5rpx;
}
.cart_footer{
  margin:20rpx 0;
  display: flex;
}
.footer_img{
  width: 30rpx;
  height: 30rpx;
  margin: 0rpx 10rpx 0 20rpx;
}